{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "target": "es6",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "./build"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
